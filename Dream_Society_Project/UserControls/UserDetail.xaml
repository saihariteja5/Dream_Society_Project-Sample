            <TextBox x:Name="txttAdress" Height="54"  Margin="238,0,539.6,0" TextWrapping="Wrap"/>

            <Label x:Name="lblAadhar" Content="AadharNumber" HorizontalAlignment="Left" Margin="80,5,0,-25" VerticalAlignment="Top" Height="55" Width="135" FontFamily="Mangal" FontSize="17"/>

            <TextBox x:Name="txtAadhar" Height="24"  Margin="238,-25,539.6,0" />

            <Label x:Name="lblBank" Content="Enter Bank Details" Margin="80,17,483.4,0" Height="50" FontSize="17"/>

            <Button x:Name="button" Content="Click to Bank Details" Height="40" Width="120" Margin="240,-95,0,-25"  Click="buttonclicked"  HorizontalAlignment="Left" Background="LemonChiffon" />

            <Button x:Name="btnsaved" Content="Save" Height="40" Width="120" Margin="240,-95,0,-25"  Click="btnsave"  HorizontalAlignment="Righ" Background="LemonChiffon" />

